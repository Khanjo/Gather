@{
    Layout = "_Layout";
}

@using Gather.Models

<h1>Activities</h1>

@if (@Model.Count == 0)
{
    <h3> No Activities have been planned yet. </h3>
}
else
{
    <ul>
        @foreach (Activity a in Model)
        {
            <li>@Html.ActionLink($"{a.Name}", "Details", new { id = a.ActivityId })</li>
        }
    </ul>
}