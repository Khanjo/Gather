@{
    Layout = "_Layout";
}

@using Gather.Models

<h1>Guests</h1>

@if (@Model.Count == 0)
{
    <h3> No guests have been added yet. </h3>
}
else
{
    <ul>
        @foreach (ApplicationUser v in Model)
        {
            <li>@Html.ActionLink($"{v.GatheringUsers}", "Details", new { id = v.GatheringUsers })</li>
            <li>@Html.ActionLink($"{v.GuestsItems}", "Details", new { id = v.GuestsItems })</li>
        }
    </ul>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>